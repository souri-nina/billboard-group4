<h1><% @billboard.id ? 'Edit Billboard' : 'Create Billboard' %></h1>
<hr />
<%= form_for @billboard do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, required: true, autofocus: true %>

  <%= f.label :song_name %>
  <%= f.text_field :song_name, required: true, autofocus: true %>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, required: true, autofocus: true %>

  <%= f.submit %>
<% end %>